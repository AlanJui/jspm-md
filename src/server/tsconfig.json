{
  "compileOnSave": true,

  "compilerOptions": {
    "outDir": "../../server/",
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true
  },

  "filesGlob": [
    "./**/*.ts",
    "../typings/**/*.d.ts",
    "!../node_modules/**/*.ts"
  ],

  "files": [
    "app.ts",
    "db.ts",
    "routes.ts",
    "config/express.ts",
    "config/seed.ts",
    "api/user/index.ts",
    "models/Person.ts",
    "models/User.ts"
  ]
}