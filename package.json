{
  "name": "jspm-md-01",
  "version": "1.0.0",
  "description": "練習使用 TypeScript + JSPM 開發 AngularJS 1.x + Angular Material 的 App",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project client/src",
    "bundle": "jspm bundle-sfx js/main.js _build/bundle.js",
    "db": "mongod --dbpath ./db",
    "dev": "tsc --watch --project client/src",
    "start": "gulp",
    "serve:dev": "browser-sync start --files 'client/index.html, client/**/*.tpl.html, client/config.js, client/js/**/*.js, client/assets/app.css' --server './client'",
    "serve:dist": "browser-sync start --server '_build'",
    "setup": "npm install && jspm install && typings install",
    "test": "npm run unit-tests && npm run e2e-tests",
    "unit-tests": "karma start",
    "e2e-tests": "protractor protractor.conf.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.11.1",
    "bs-html-injector": "^3.0.1",
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-gh-pages": "^0.5.4",
    "gulp-html-replace": "^1.5.5",
    "gulp-htmlmin": "^1.3.0",
    "gulp-inject": "^3.0.0",
    "gulp-jspm": "^0.5.8",
    "gulp-less": "^3.0.5",
    "gulp-ng-template": "^0.2.2",
    "gulp-nodemon": "^2.0.6",
    "gulp-tsc": "^1.1.5",
    "jasmine-core": "^2.4.1",
    "jasmine-spec-reporter": "^2.4.0",
    "jspm": "^0.16.32",
    "karma": "^0.13.21",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-coverage": "^0.5.3",
    "karma-jasmine": "^0.3.7",
    "karma-jspm": "^2.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-spec-reporter": "0.0.24",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "phantomjs-prebuilt": "^2.1.4",
    "protractor": "^3.2.2",
    "run-sequence": "^1.1.5",
    "wrench": "^1.5.8"
  },
  "jspm": {
    "directories": {
      "baseURL": "client"
    },
    "dependencies": {
      "angular": "github:angular/bower-angular@^1.5.3",
      "angular-animate": "github:angular/bower-angular-animate@^1.5.3",
      "angular-aria": "github:angular/bower-angular-aria@^1.5.3",
      "angular-material": "github:angular/bower-material@^1.0.7",
      "angular-material-icons": "npm:angular-material-icons@^0.7.0",
      "angular-messages": "github:angular/bower-angular-messages@^1.5.3",
      "angular-resource": "github:angular/bower-angular-resource@^1.5.3",
      "css": "github:systemjs/plugin-css@^0.1.20",
      "json": "github:systemjs/plugin-json@^0.1.0",
      "text": "github:systemjs/plugin-text@^0.0.7"
    },
    "devDependencies": {
      "clean-css": "npm:clean-css@^3.4.12",
      "typescript": "npm:typescript@^1.6.2"
    }
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "errorhandler": "^1.4.3",
    "express": "^4.13.4",
    "method-override": "^2.3.5",
    "mongodb": "^2.1.16"
  }
}
